{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "sourceMap": true,
    "noUnusedLocals": true
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "types": [
    "react",
    "jest"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ],
  "compileOnSave": false
}